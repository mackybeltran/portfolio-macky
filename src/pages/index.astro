---
// This is the frontmatter section - you can add JavaScript here
import SEO from '../components/SEO.astro';
import Analytics from '../components/Analytics.astro';
import Navbar from '../components/Navbar.astro';
import Card from '../components/Card.astro';
import '../styles/global.css';

const greeting = 'Hello World!';
const currentDate = new Date().toLocaleDateString();

// SEO metadata
const title = 'Macky Beltran - Full Stack Developer & Designer';
const description =
  'Professional portfolio showcasing web development projects, skills, and experience. Specializing in modern web technologies including React, Astro, and responsive design.';
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || 'https://yourdomain.com'
);

// Structured data for rich snippets
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Macky Beltran',
  jobTitle: 'Full Stack Developer',
  description:
    'Passionate web developer creating modern, responsive web applications',
  url: Astro.site?.href || 'https://yourdomain.com',
  sameAs: [
    'https://github.com/mackybeltran',
    'https://linkedin.com/in/mackybeltran',
    'https://twitter.com/mackybeltran',
  ],
  knowsAbout: [
    'Web Development',
    'React',
    'JavaScript',
    'TypeScript',
    'Astro',
    'CSS',
    'HTML',
  ],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonicalURL={canonicalURL}
      structuredData={structuredData}
      openGraph={{
        title: 'Macky Beltran - Full Stack Developer Portfolio',
        description:
          'Explore my web development projects and professional experience',
        image: '/og-image.jpg',
        type: 'website',
      }}
      twitter={{
        card: 'summary_large_image',
        title: 'Macky Beltran - Full Stack Developer',
        description: 'Professional web developer portfolio',
        image: '/og-image.jpg',
        creator: '@mackybeltran',
      }}
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=UnifrakturMaguntia&family=MedievalSharp&family=IM+Fell+English&family=Playfair+Display:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../styles/global.css" />
    <Analytics />
  </head>
  <body>
    <header class="newspaper-header">
      <h1 class="newspaper-title">Macky Beltran</h1>
      <h2 class="newspaper-subtitle">Frontend Developer</h2>
    </header>
    <Navbar />
    <div class="container">
      <div class="newspaper-content">
        <div class="cards-section">
          <Card
            layout="simple"
            title="Frontend Development"
            content="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
          />

          <Card
            layout="complex"
            title="Professional Experience"
            content="Experienced developer with expertise in modern web technologies and full-stack development. Passionate about creating efficient, scalable solutions."
          />
        </div>

        <div class="column-3">
          <h2>Technical Skills</h2>
          <p>
